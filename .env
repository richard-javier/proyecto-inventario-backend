# Nunca commitear a repositorios públicos.
# Agregar a .gitignore: /.env

# =======================================================
# CONFIGURACIÓN DEL SERVIDOR
# =======================================================

/**
 * @environment PORT
 * @description Puerto donde el servidor Express escuchará las peticiones
 * @type {number}
 * @default 3001
 * @example 3001, 8080, 5000
 */
PORT=3001

# =======================================================
# CREDENCIALES DE LA BASE DE DATOS MYSQL
# =======================================================

/**
 * @environment DB_HOST
 * @description Host o dirección del servidor de base de datos MySQL
 * @type {string}
 * @default localhost
 * @example localhost, 127.0.0.1, mysql.midominio.com
 */
DB_HOST=localhost

/**
 * @environment DB_USER
 * @description Usuario para autenticación en la base de datos MySQL
 * @type {string}
 * @default root
 * @example root, admin, usuario_app
 */
DB_USER=root

/**
 * @environment DB_PASSWORD
 * @description Contraseña para autenticación en la base de datos MySQL
 * @type {string}
 * @security CRITICAL
 * @warning Información sensible - nunca compartir
 * @example Javier14Lobo (⚠️ CAMBIAR en producción)
 */
DB_PASSWORD=Javier14Lobo

/**
 * @environment DB_DATABASE
 * @description Nombre de la base de datos/schema a utilizar
 * @type {string}
 * @default inventario
 * @example inventario, production_db, dev_database
 */
DB_DATABASE=inventario

# =======================================================
# JWT (JSON WEB TOKEN) - CONFIGURACIÓN DE SEGURIDAD
# =======================================================

/**
 * @environment JWT_SECRET
 * @description Clave secreta para firmar y verificar tokens JWT
 * @type {string}
 * @security CRITICAL
 * @requirement Mínimo 32 caracteres, aleatorio y complejo
 * @warning Nunca usar claves simples en producción
 * @example UNA_CLAVE_SECRETA_LARGA_Y_ALEATORIA (⚠️ CAMBIAR en producción)
 */
JWT_SECRET=UNA_CLAVE_SECRETA_LARGA_Y_ALEATORIA